--[[
    DIAGNOSA DETIL KOKUSHIBO
    Tujuan: Mengecek apakah monster itu hidup, mati, atau cuma pajangan.
]]

local monsterName = "Kokushibo" 
local folderName = "CharactersAndNPCs"
local Workspace = game:GetService("Workspace")

print("\n\n========================================")
print("     MULAI CHECKUP KONDISI BOSS     ")
print("========================================")

-- 1. CEK FOLDER
local folder = Workspace:FindFirstChild(folderName)
if not folder then
    warn("‚ùå [FATAL] Folder '" .. folderName .. "' TIDAK DITEMUKAN!")
    return -- Stop script
else
    print("‚úÖ Folder '" .. folderName .. "' ditemukan.")
end

-- 2. CEK MODEL
local monster = folder:FindFirstChild(monsterName)
if not monster then
    warn("‚ùå [FATAL] Model '" .. monsterName .. "' TIDAK ADA di dalam folder.")
    return -- Stop script
else
    print("‚úÖ Model '" .. monsterName .. "' ditemukan.")
end

-- 3. CEK KOMPONEN KEHIDUPAN (HUMANOID)
local humanoid = monster:FindFirstChild("Humanoid")
if humanoid then
    print("   [INFO] Humanoid ditemukan.")
    print("   ‚ù§Ô∏è Health: " .. humanoid.Health .. " / " .. humanoid.MaxHealth)
    
    if humanoid.Health <= 0 then
        warn("   ‚ö†Ô∏è STATUS: MATI (Health 0 atau kurang).")
    else
        print("   ‚úÖ STATUS: HIDUP (Health > 0).")
    end
else
    warn("   ‚ùå [CRITICAL] Tidak ada 'Humanoid'. Ini cuma model kosong/patung.")
end

-- 4. CEK FISIK (ROOT PART)
local rootPart = monster:FindFirstChild("HumanoidRootPart")
if rootPart then
    print("   [INFO] HumanoidRootPart (Badan Utama) ditemukan.")
    print("   üìç Posisi: " .. tostring(rootPart.Position))
    print("   üëª Transparency: " .. rootPart.Transparency)
    
    -- Cek apakah dia disembunyikan jauh di bawah map?
    if rootPart.Position.Y < -50 then
        warn("   ‚ö†Ô∏è WARNING: Posisi Y negatif (Di bawah map/Void).")
    end
else
    warn("   ‚ùå [CRITICAL] Tidak ada 'HumanoidRootPart'. Monster tidak punya fisik.")
end

-- 5. KESIMPULAN SIMULASI
print("\n----------------------------------------")
print("     KESIMPULAN UNTUK SCRIPT HOP     ")
print("----------------------------------------")

local isAlive = (humanoid and humanoid.Health > 0)
local hasBody = (rootPart ~= nil)

if isAlive and hasBody then
    print("üü¢ HASIL: Script Auto Hop akan BERHENTI (Monster dianggap ADA & SIAP DIBUNUH).")
elseif not isAlive then
    print("üî¥ HASIL: Script Auto Hop akan PINDAH SERVER (Alasan: Monster Mati/HP 0).")
elseif not hasBody then
    print("üî¥ HASIL: Script Auto Hop akan PINDAH SERVER (Alasan: Monster tidak punya badan fisik).")
else
    print("üî¥ HASIL: Script Auto Hop akan PINDAH SERVER (Alasan: Tidak valid).")
end
print("========================================\n\n")
